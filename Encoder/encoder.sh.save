DIRECTORY=$(cd $(dirname $0) && pwd)

handleParameters () {
   while [ "$1" != "" ]; do
      PARAM=`echo $1 | awk -F = '{print $1}'`
      VALUE=`echo $1 | awk -F = '{print $2}'`
      case $PARAM in
         -h | --help)
            echo 'Help'
            echo $PARAM $VALUE
            ;;
         -p } --path)
            echo $PARAM $VALUE
            ;;
         *)
            echo -e "\a[ ERROR ] Unknown parameter \"$PARAM\""
            exit 1
            ;;
      esac
      shift
   done
}

main ()
{
   handleParameters "$@"
}
main "$@"

